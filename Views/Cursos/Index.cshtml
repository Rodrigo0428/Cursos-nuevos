@model Cursos_nuevos.Models.Cursos

@{
    ViewData["Title"] = "Cursos";
}

<div class="container">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Curso" asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre del Curso</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label">Descripción del Curso</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duracion" class="control-label">Duración del Curso (horas)</label>
                    <input asp-for="Duracion" type="number" class="form-control" />
                    <span asp-validation-for="Duracion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaInicio" class="control-label">Fecha de Inicio del Curso</label>
                    <input asp-for="FechaInicio" type="date" class="form-control" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Crear Curso</button>
                </div>
            </form>
            <h1>@ViewData["Message"]</h1>
            <div>
                <a asp-action="Index">Volver al listado</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
